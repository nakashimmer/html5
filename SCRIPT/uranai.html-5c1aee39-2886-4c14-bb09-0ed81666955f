var kuji=document.getElementById("kuji");
var pos={x:0,y:0}
kuji.addEventListener("mousemove",function(e){
	var rect=e.target.getBoundingClientRect();
	e.clientX-rect.left;


})
</script>

<script>

var n=Math.random()*3;
n=Math.floor(n);
if(n==0){var msg="小吉";}
if(n==1){var msg="中吉";}
if(n==2){var msg="大吉";}
document.getElementById("info").innerHTML=msg;

</script>

